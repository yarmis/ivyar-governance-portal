generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String
  role      String   @default("VETERAN") // VETERAN, OPERATOR, COMMISSION, ADMIN, AUDITOR
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  serviceRecord VeteranServiceRecord?
  grants        VeteranGrant[]
  auditLogs     AuditLog[]
  comments      ApplicationComment[]
  
  @@index([role])
}

model VeteranServiceRecord {
  id              Int      @id @default(autoincrement())
  userId          Int      @unique
  user            User     @relation(fields: [userId], references: [id])
  
  combatDays      Int      @default(0)
  disabilityLevel Int      @default(0)
  serviceYears    Decimal  @db.Decimal(4, 1)
  awards          Json?    // Array of award names
  
  priorityScore   Int      @default(0)
  priorityLevel   String   @default("STANDARD") // STANDARD, DEMOBILIZED, LONG_SERVICE, DISABLED_VETERAN, COMBAT_VETERAN
  
  verified        Boolean  @default(false)
  verifiedAt      DateTime?
  verifiedBy      Int?
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model VeteranGrant {
  id                     Int      @id @default(autoincrement())
  userId                 Int
  user                   User     @relation(fields: [userId], references: [id])
  
  preferredOblast        String
  preferredAreaMin       Decimal  @db.Decimal(8, 2)
  preferredAreaMax       Decimal  @db.Decimal(8, 2)
  landUseType            String   // AGRICULTURE, FORESTRY, MIXED
  
  status                 String   @default("PENDING") // PENDING, UNDER_REVIEW, APPROVED, ALLOCATED, REJECTED
  priorityScore          Int      @default(0)
  priorityLevel          String   @default("STANDARD")
  
  allocatedParcelId      Int?
  allocatedParcel        LandParcel? @relation(fields: [allocatedParcelId], references: [id])
  allocationDate         DateTime?
  
  reviewedBy             Int?
  reviewedAt             DateTime?
  rejectionReason        String?
  
  submittedAt            DateTime @default(now())
  updatedAt              DateTime @updatedAt
  
  comments               ApplicationComment[]
  
  @@index([userId])
  @@index([status])
  @@index([priorityScore])
}

model LandParcel {
  id                Int      @id @default(autoincrement())
  cadastralNumber   String   @unique
  oblast            String
  area              Decimal  @db.Decimal(8, 2)
  marketValue       Decimal  @db.Decimal(12, 2)
  
  coordinates       String?
  soilQuality       String?
  
  status            String   @default("AVAILABLE") // AVAILABLE, RESERVED, ALLOCATED, DISPUTED
  
  allocatedTo       Int?
  allocationDate    DateTime?
  
  cultivationYears  Int      @default(5)
  noSaleYears       Int      @default(10)
  noLeaseToCorp     Boolean  @default(true)
  
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  
  grants            VeteranGrant[]
  
  @@index([status])
  @@index([oblast])
}

model ApplicationComment {
  id          Int      @id @default(autoincrement())
  grantId     Int
  grant       VeteranGrant @relation(fields: [grantId], references: [id])
  
  userId      Int
  user        User     @relation(fields: [userId], references: [id])
  
  comment     Text
  isInternal  Boolean  @default(false) // visible only to operators/commission
  
  createdAt   DateTime @default(now())
  
  @@index([grantId])
}

model AuditLog {
  id            Int      @id @default(autoincrement())
  userId        Int?
  user          User?    @relation(fields: [userId], references: [id])
  
  action        String   // CREATE, UPDATE, DELETE, APPROVE, REJECT
  resourceType  String   // USER, GRANT, PARCEL, etc
  resourceId    Int?
  
  details       Json?    // { before, after, reason, etc }
  
  ipAddress     String?
  userAgent     String?
  
  createdAt     DateTime @default(now())
  
  @@index([userId])
  @@index([action])
  @@index([resourceType, resourceId])
  @@index([createdAt])
}
