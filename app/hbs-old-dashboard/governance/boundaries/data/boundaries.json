{
  "version": "1.3",
  "lastUpdated": "2026-01-04",
  "boundaries": [
    {
      "id": "ETH-1",
      "rule": "No Harm Principle",
      "description": "Decisions must not create risk of harm to beneficiaries, staff, or communities",
      "category": "safety",
      "severity": "critical",
      "checkpoints": [
        "Physical safety assessment completed",
        "Psychological impact considered",
        "Vulnerable populations identified",
        "Mitigation measures in place"
      ],
      "violationActions": [
        "Immediate halt of activity",
        "Board notification within 24 hours",
        "Independent review required"
      ]
    },
    {
      "id": "ETH-2",
      "rule": "Conflict of Interest Prevention",
      "description": "All parties must declare and manage conflicts of interest",
      "category": "integrity",
      "severity": "high",
      "checkpoints": [
        "Declaration forms completed",
        "Relationships disclosed",
        "Recusal procedures followed",
        "Independent oversight present"
      ],
      "violationActions": [
        "Remove conflicted party from decision",
        "Document incident",
        "Review past decisions if applicable"
      ]
    },
    {
      "id": "ETH-3",
      "rule": "Transparency Requirement",
      "description": "Decision processes must be documented and accessible to stakeholders",
      "category": "accountability",
      "severity": "high",
      "checkpoints": [
        "Decision rationale documented",
        "Stakeholders informed",
        "Records maintained",
        "Audit trail complete"
      ],
      "violationActions": [
        "Retroactive documentation required",
        "Process review initiated",
        "Training scheduled"
      ]
    },
    {
      "id": "ETH-4",
      "rule": "Beneficiary Primacy",
      "description": "Beneficiary interests must be prioritized in all decisions",
      "category": "mission",
      "severity": "critical",
      "checkpoints": [
        "Beneficiary impact assessed",
        "Community consultation completed",
        "Feedback mechanisms active",
        "Grievance channels open"
      ],
      "violationActions": [
        "Decision review required",
        "Community engagement mandatory",
        "Impact remediation plan"
      ]
    },
    {
      "id": "ETH-5",
      "rule": "Proportionality Standard",
      "description": "Responses must be proportional to the situation and need",
      "category": "operations",
      "severity": "medium",
      "checkpoints": [
        "Need assessment completed",
        "Resource allocation justified",
        "Alternative options considered",
        "Scalability evaluated"
      ],
      "violationActions": [
        "Allocation review",
        "Adjustment recommendation",
        "Documentation update"
      ]
    },
    {
      "id": "ETH-6",
      "rule": "Due Diligence Obligation",
      "description": "Thorough verification required before partnerships and disbursements",
      "category": "compliance",
      "severity": "high",
      "checkpoints": [
        "Background checks completed",
        "Financial review done",
        "Capacity verified",
        "References contacted"
      ],
      "violationActions": [
        "Partnership suspended",
        "Enhanced monitoring",
        "Compliance review"
      ]
    },
    {
      "id": "ETH-7",
      "rule": "Donor Intent Compliance",
      "description": "Fund usage must align with donor agreements and restrictions",
      "category": "compliance",
      "severity": "high",
      "checkpoints": [
        "Donor agreement reviewed",
        "Restrictions identified",
        "Usage aligned",
        "Reporting requirements met"
      ],
      "violationActions": [
        "Donor notification required",
        "Fund reallocation review",
        "Agreement amendment process"
      ]
    },
    {
      "id": "ETH-8",
      "rule": "Whistleblower Protection",
      "description": "Reporters of concerns must be protected from retaliation",
      "category": "safety",
      "severity": "critical",
      "checkpoints": [
        "Anonymity preserved",
        "Retaliation monitoring active",
        "Support resources available",
        "Independent channel accessible"
      ],
      "violationActions": [
        "Immediate protection measures",
        "Investigation of retaliation",
        "Legal action if necessary"
      ]
    },
    {
      "id": "ETH-9",
      "rule": "Data Protection Standard",
      "description": "Personal and sensitive data must be protected according to regulations",
      "category": "compliance",
      "severity": "high",
      "checkpoints": [
        "Consent obtained",
        "Data minimization applied",
        "Security measures active",
        "Retention limits observed"
      ],
      "violationActions": [
        "Data breach protocol activated",
        "Affected parties notified",
        "Regulatory reporting if required"
      ]
    },
    {
      "id": "ETH-10",
      "rule": "Cultural Sensitivity",
      "description": "Decisions must respect local customs, values, and practices",
      "category": "mission",
      "severity": "medium",
      "checkpoints": [
        "Local context assessed",
        "Community leaders consulted",
        "Cultural impacts considered",
        "Adaptation measures planned"
      ],
      "violationActions": [
        "Community dialogue required",
        "Approach modification",
        "Cultural advisor engagement"
      ]
    }
  ]
}